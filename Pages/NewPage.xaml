<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TodoDolistExaul.Pages.NewPage"
             Title="Botones">
    <VerticalStackLayout>
        <!--TEXTO CON MENSAJE DE INGRESAR NUEVA TAREA-->
        <Label 
            Text="Agregar nueva tarea"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <!--BOTON DE INGRESAR TAREA-->
        <Button Margin="40"
            FontSize="20"
            BackgroundColor="Black"
            Text="Agregar nueva tarea "/>
        <!--BOTON CON EVENTO REGRESAR-->
        <Button Margin="40"
                FontSize="20"
                BackgroundColor="Black"
                Text="Regresar"
                Clicked="Button_Clicked"/>
        
    </VerticalStackLayout>
</ContentPage>